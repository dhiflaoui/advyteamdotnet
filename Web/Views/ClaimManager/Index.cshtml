<script>
    $("#s").on("keyup", function () {
        var t = $(this).val();
        $("table tr").each(function (results) {
            if (results !== 0) {
                var id = $(this).find("td:nth-child(1)").text();
                if (id.indexOf(t) == 0 && id.toLowerCase().indexOf(t.toLowerCase()) < 0) {
                    $(this).hide();

                } else {
                    $(this).show();
                }
            }
        });

    });
</script>



